{
  "manifest_version": 3,
  "name": "Whosbot - Replies bot blocker for Twitter",
  "description": "Replies bot blocker for Twitter",
  "version": "1.1.0",
  "icons": {
    "128": "icon.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
